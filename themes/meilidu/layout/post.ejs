<article>
	<% if(locals.archive) { %>
		<h1><a href="<%= page.path %>"><%= page.title %></a></h1>
	<% } else { %>
		<h1><%= page.title %></h1>
	<% } %>
	<div class="article__infos">
		<span class="article__date"><%- page.date.format('L') %></span><br />
		<span class="article__category">
			<%- list_categories(page.categories, {
			  show_count: false,
			  class: 'article-category',
			  style: 'none',
			  separator: ' > '
			}) %>
		</span>
	</div>

	<% if(page.excerpt !== '') { %>
		<%- page.excerpt %>
	<% } else { %>
		<%- page.content %>
	<% } %>
</article>
